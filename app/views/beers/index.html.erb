<h1>Listing beers</h1>

<table>
  <thead>
    <tr>
      <th>Bid</th>
      <th>Beer name</th>
      <th>Beer abv</th>
      <th>Beer description</th>
      <th>Beer style</th>
      <th>Is in production</th>
      <th>Rating count</th>
      <th>Rating score</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.bid %></td>
        <td><%= beer.beer_name %></td>
        <td><%= beer.beer_abv %></td>
        <td><%= beer.beer_description %></td>
        <td><%= beer.beer_style %></td>
        <td><%= beer.is_in_production %></td>
        <td><%= beer.rating_count %></td>
        <td><%= beer.rating_score %></td>
        <td><%= beer.brewery_id %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

